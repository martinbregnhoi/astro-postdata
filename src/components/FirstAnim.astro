<script>
    
    LottieInteractivity.create({
                        player: '#secondLottie',
                        mode: "chain",
                    actions: [
                         {
            state: 'loop',
            transition: 'click',
            frames: 'start'
        },
        {
            state: 'autoplay',
            transition: 'onComplete',
            frames: 'end',
            reset: true
        }
                    ]
                    }); 
                    
</script>